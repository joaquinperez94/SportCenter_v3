<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd		
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-4.0.xsd		
	">

	<util:list id="converters">
		<bean class="converters.StringToActorConverter"/>
		<bean class="converters.ActorToStringConverter"/>
		
		<bean class="converters.AdministradorToStringConverter" /> 
		<bean class="converters.StringToAdministradorConverter" /> 
		
		<bean class="converters.CentroToStringConverter" /> 
		<bean class="converters.StringToCentroConverter" /> 
		
		<bean class="converters.GestorToStringConverter" /> 
		<bean class="converters.StringToGestorConverter" /> 
		
		<bean class="converters.ReservaToStringConverter" /> 
		<bean class="converters.StringToReservaConverter" /> 

		<bean class="converters.ServicioToStringConverter" /> 
		<bean class="converters.StringToServicioConverter" /> 
		
		<bean class="converters.UsuarioToStringConverter" /> 
		<bean class="converters.StringToUsuarioConverter" /> 
		
		<bean class="converters.StringToComentarioConverter"/>
		<bean class="converters.ComentarioToStringConverter"/>
		
		<bean class="converters.StringToHorarioConverter"/>
		<bean class="converters.HorarioToStringConverter"/>
		
	</util:list>
	
</beans>